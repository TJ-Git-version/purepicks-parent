<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.devsurfer.purepicks.product.mapper.CategoryMapper">

    <resultMap id="categoryVoMap" type="com.devsurfer.purepicks.model.vo.h5.CategoryVo">
        <id property="id" column="id"/>
        <result property="parentId" column="parent_id"/>
        <result property="name" column="name"/>
        <result property="imageUrl" column="image_icon"/>
        <result property="orderNum" column="sort"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <sql id="category_column">
        `id`, `parent_id`, `name`, `image_icon`, `sort`, `status`, `create_time`
    </sql>

    <select id="findOneCategory" resultMap="categoryVoMap">
        select
        <include refid="category_column"/>
        from `category`
        <where>
            `is_deleted` = 1
            and `status` = 1
            and `parent_id` = 0
        </where>
        order by `sort` asc, `create_time` desc
    </select>

    <select id="findAll" resultMap="categoryVoMap">
        select
        <include refid="category_column"/>
        from `category`
        <where>
            `is_deleted` = 1
            and `status` = 1
        </where>
        order by `sort`
    </select>
</mapper>
